<mvc:View
	controllerName="history.for.every.thing.ui.controller.Home"
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc">
	<Page showHeader="false">
		<l:BlockLayout
			id="BlockLayout"
			background="Default">
			<l:BlockLayoutRow>
				<l:BlockLayoutCell class="sapUiNoContentPadding">
					<Image
						src="{
							path: 'view>/isPhone',
							formatter: '.formatter.srcImageValue'
						}"
						width="100%"/>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
					class="sapUiResponsiveContentPadding"
					title="{i18n>homePageTitle}"
					backgroundColorSet="ColorSet9"
					backgroundColorShade="ShadeA"
					titleAlignment="Left"/>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeD">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://role"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>administrationTitle}"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>administrationContent}"
							class="sapUiTinyMarginBottom"/>
						<Link text="{i18n>userAccountLinkText}" href="#/userAccount"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://add-product"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>thingTitle}"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>thingContent}"
							class="sapUiTinyMarginBottom"/>
						<Link text="{i18n>createThingLinkText}" href="#/createThing"/>
						<Link text="{i18n>thingLinkText}" href="#/things"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeD">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://customer-financial-fact-sheet"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>historyTitle}"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>historyContent}"
							class="sapUiTinyMarginBottom"/>
						<Link text="{i18n>historyLinkText}" href="#/thingHistory"/>
						<Link text="{i18n>historyCreateEventLinkText}" href="#/createEvent"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet11"
					backgroundColorShade="ShadeB">
					<l:VerticalLayout>
						<core:Icon
							src="sap-icon://thumb-up"
							size="2.5rem"
							color="Default"/>
						<Title
							text="{i18n>publicTitle}"
							titleStyle="H2"
							class="sapUiTinyMarginTopBottom"/>
						<Text
							text="{i18n>publicContent}"
							class="sapUiTinyMarginBottom"/>
						<Link text="{i18n>publicThingLinkText}" href="#/thingCards"/>
					</l:VerticalLayout>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
			<l:BlockLayoutRow>
				<l:BlockLayoutCell
					backgroundColorSet="ColorSet9"
					backgroundColorShade="ShadeA"
					width="4">
					<Table items="{path:'history>/latest', templateShareable: false}">
						<headerToolbar>
							<Toolbar design="Transparent">
								<Title text="{i18n>historyOverviewTitle}"/>
							</Toolbar>
						</headerToolbar>
							<columns>
								<Column>
									<Text text="{i18n>date}"/>
								</Column>
								<Column minScreenWidth="Tablet">
									<Text text="{i18n>thing}"/>
								</Column>
								<Column minScreenWidth="Desktop" hAlign="End">
									<Text text="{i18n>text}"/>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{history>thing}"/>
										<Text text="{history>date}"/>
										<Text text="{history>text}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
				</l:BlockLayoutCell>
			</l:BlockLayoutRow>
		</l:BlockLayout>
	</Page>
</mvc:View>