<mvc:View
	controllerName="history.for.every.thing.ui.controller.ThingCard"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	xmlns:core="sap.ui.core">
	<Page showHeader="false" busyIndicatorDelay="1">
		<VBox height="500px" width="100%" justifyContent="Center" alignItems="Center" class="sapUiResponsiveMargin">
			<Button id="printButton" press="onPrint" icon="sap-icon://print" text="Print"/>
			<Title text="" width="300px"/>
			<Title text="" width="300px"/>
			<Title text="" width="300px"/>
			<VBox class="borderPrintBox">
				<Title id="thingName" text="" width="300px"/>
				<HBox>
					<Image
						id="cardImage"
						densityAware="false"
						height="300px"
						width="300px"/>	
					<TextArea id="thingUrl" text="" width="300px" height="300px" editable="false"/>
				</HBox>
			</VBox>
		</VBox>
	</Page>
</mvc:View>